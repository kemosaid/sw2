<div class="text-info bg-dark">
    <h1 class="bg-secondary shadow  text-center p-4  mx-auto">
        Add Subject</h1>

    <section class="form-section mx-auto w-50 my-4 d-flex">
        <div class="container">
            <div class="row mx-auto">
                <div class="col-sm-9">
                    <form action="" method="post">
                        <div class="form-group my-2">
                            <label for="SUB_name">Subject Name</label>
                            <input type="text" class="form-control" name="SUB_name" id="SUB_name">
                        </div>
                        <div class="form-group my-2">
                            <label for="SUB_code">Subject Code</label>
                            <input type="text" class="form-control" id="SUB_code" name="SUB_code">
                        </div>

                        <label for="SUB_depart">Subject Department</label>
                        <select class="form-select" name="SUB_depart" id="SUB_depart">
                            <optgroup>
                                <% if(departments.length> 0){%>
                                    <%for(let dep of departments){%>
                                        <option name="SUB_depart">
                                            <%= dep.DP_code%>
                                        </option>
                                        <%}%>
                                            <%}%>
                            </optgroup>
                        </select>
                        <label for="SUB_prev">Prerequisite</label>
                        <select class="form-select" name="SUB_prev" id="SUB_prev">
                            <optgroup>
                                
                                <% if(subjects.length> 0){%>
                                    <%for(let sub of subjects){%>
                                        <option name="SUB_prev">
                                            <%= sub.SUB_name%>
                                        </option>
                                        <%}%>
                                            <%}%>

                            </optgroup>
                        </select>
                        <label for="SUB_doctor">Subject Doctor</label>
                        <select class="form-select" name="SUB_doctor" id="SUB_doctor">
                            <optgroup>
                                <% if(doctor.length> 0){%>
                                    <%for(let doc of doctor){%>
                                        <option name="SUB_doctor">
                                            <%= doc.DOC_name%>
                                        </option>
                                        <%}%>
                                            <%}%>
                            </optgroup>
                        </select>
                        <input type="submit" value="Add Subject" class="btn btn-outline-info mt-2">
                        <br>
                        <h6>`</h6>
                    </form>
                </div>
            </div>
        </div>
    </section>
</div>