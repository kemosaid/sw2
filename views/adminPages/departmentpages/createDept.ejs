<h1>Add Department</h1>
<h1 class="bg-light shadow rounded text-center p-4 w-50 mx-auto">
    Add Department</h1>

<section class="form-section my-4 d-flex">
    <div class="container">
        <div class="row mx-auto">
            <div class="col-sm-9">
                <form action="" method="post">
                    <div class="form-group my-2">
                        <label for="DP_name">Department name</label>
                        <input type="text" class="form-control" name="DP_name" id="DP_name">
                    </div>
                    <div class="form-group my-2">
                        <label for="DP_code">Department Code</label>
                        <input type="text" class="form-control" id="DP_code" name="DP_code">
                    </div>
                    <input type="submit" value="Add Department" class="btn btn-outline-primary mt-2">
                </form>
            </div>
        </div>
    </div>
</section>
