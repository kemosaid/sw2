<h1 class="text-center bg-dark text-warning my-3 p-4 
rounded w-50 mx-auto">All Departments</h1>

<div class="events-list my-5 text-center">
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Department Name</th>
                <th>Department Code</th>
                <th>actions</th>
            </tr>
        </thead>
        <% if(departments.length> 0){%>
            <tbody>
                <%for(let dept of departments){%>
                    <tr>
                        <th>
                            <%= dept.id%>
                        </th>
                        <th>
                            <%= dept.DP_name%>
                        </th>
                        <th>
                            <%= dept.DP_code%>
                        </th>

                        <th>
                            <a href="/admin/<%= dept.id%>/edit" class="mx-1 btn btn-outline-success">update</a>
                            <a href="/admin/<%= dept.id%>/delete" class="mx-1 btn btn-outline-danger">delete</a>
                        </th>
                    </tr>
                    <%}%>
            </tbody>
            <%}%>
    </table>
</div>
