<h1>Edit Department</h1>
<h1 class="bg-light shadow rounded text-center p-4 w-50 mx-auto">
    Edit Department</h1>

<section class="form-section my-4">
    <div class="container">
        <div class="row mx-auto">
            <div class="col-sm-9">
                <form action="/admin/<%= department.id%>/edit" method="post">
                    <div class="form-group my-2">
                        <label for="DP_name">Department Name</label>
                        <input type="text" class="form-control" name="DP_name" id="DP_name"
                            value="<%= department.DP_name%>">
                    </div>
                    <div class="form-group my-2">
                        <label for="DP_code">Department Code</label>
                        <input type="text" class="form-control" id="price" name="DP_code"
                            value="<%= department.DP_code%>">
                    </div>
            </div>
            <input type="submit" value="Edit Department" class="btn btn-outline-success mt-2">
            </form>
        </div>
    </div>
    </div>
</section>
