<h1>Edit Student</h1>
<h1 class="bg-light shadow rounded text-center p-4 w-50 mx-auto">
    Edit Student</h1>

<section class="form-section my-4">
    <div class="container">
        <div class="row mx-auto">
            <div class="col-sm-9">
                <form action="/admin/<%= student.id%>/editStd" method="post">
                    <div class="form-group my-2">
                        <label for="SUB_name">Name</label>
                        <input type="text" class="form-control" name="STD_name" id="SUB_name"
                            value="<%= student.STD_name%>">
                    </div>
                    <div class="form-group my-2">
                        <label for="STD_username">username</label>
                        <input type="text" class="form-control" id="STD_username" name="STD_username"
                            value="<%= student.STD_username%>">
                    </div>

                    <div class="form-group my-2">
                        <label for="STD_password">password</label>
                        <input type="text" class="form-control" id="STD_password" name="STD_password"
                            value="<%= student.STD_password%>">
                    </div>

                    <div class="form-group my-2">
                        <label for="STD_academy">Academic</label>
                        <input type="text" class="form-control" id="STD_academy" name="STD_academy"
                            value="<%= student.STD_academy%>">
                    </div>

            </div>
            <input type="submit" value="Edit student" class="btn btn-outline-success mt-2">
            </form>
        </div>
    </div>
    </div>
</section>